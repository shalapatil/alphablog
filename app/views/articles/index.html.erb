<h2>List of all the articles</h2>

<table>
    <thead>
        <th>Title</th>
        <th>Description</th>
        <th>Action</th>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= link_to 'Delete', article_path(article), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                        } %></td>
        </tr>        
        <% end %>
    </tbody>
</table>