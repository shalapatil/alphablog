<% if @article.errors.any? %>
    <h2 class= "text-center text-danger">errors</h2>
    <div class= "text-center mb-5 text-danger">
        <%= @article.errors.full_messages.each do |e| %>
            <%= e %>
        <% end %>
    </div>
<% end %>




<%= form_with(model: @article, local: true, data: { turbo: false }) do |f| %>
    <div class="container justify-content-md-center col-5 form-container shadow rounded">
        <div class="mb-3 ">
            <p>
            <%= f.label :title, class: "form-label" %></br>
            <%= f.text_field :title, class: "form-control" %>
            </p>
        </div>
        <div class="mb-3">
            <p>
            <%= f.label :description, class: "form-label" %></br>
            <%= f.text_area :description, class: "form-control"  %>
            </p>
        </div>
        <div class="mb-3">
            <p>
            <%= f.submit class: "btn-primary" %>
            </p>
        </div>
    </div>
<% end %>