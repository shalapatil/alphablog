<h2 class = "text-center">Showing article details</h2>

<div class="row justify-content-md-center">
        <div class="col-6 mt-4">
            <div class="card text-center shadow mb-5 bg-body rounded">
                <div class="card-header">
                <%= @article.user.name if @article.user %>
                </div>
                <div class="card-body">
                <h5 class="card-title"><%= @article.title %></h5>
                <p class="card-text"><%= @article.description %></p>
                <%=link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-primary" %>
                <%= link_to 'Delete', article_path(@article), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                        }, 
                        class: "btn btn-outline-danger" %>
                </div>
                <div class="card-footer text-muted">
                    Created <%= time_ago_in_words(@article.created_at) %> ago, 
                    Edited <%= time_ago_in_words(@article.updated_at) %> ago
                </div>
            </div>
        </div>
    </div>


